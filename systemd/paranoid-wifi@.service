[Unit]
Description="Randomize MAC, localtime, ip on %I"
Documentation="https://github.com/szorfein/paranoid-ninja"
Wants=wpa_supplicant@%i.service
Requires=tor.service
After=network.target nss-lookup.target
Before=tor.service

[Service]
ExecStart=/usr/bin/paranoid-ninja -i -p -H -t -c /etc/paranoid-ninja/paranoid.conf
ExecReload=/usr/bin/paranoid-ninja -m -i -p -H -t -c /etc/paranoid-ninja/paranoid.conf
ExecStop=/usr/bin/paranoid-ninja -D -c /etc/paranoid-ninja/paranoid.conf
RemainAfterExit=yes
TimeoutSec=35
IgnoreSIGPIPE=false
Type=oneshot

[Install]
WantedBy=multi-user.target
