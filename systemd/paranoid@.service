[Unit]
Description="Randomize MAC, localtime, ip... on %I"
Documentation="https://github.com/szorfein/paranoid-ninja"
Wants=network-pre.target
Before=network-pre.target

[Service]
ExecStart=/usr/lib/systemd/scripts/paranoid start %i
ExecReload=/usr/lib/systemd/scripts/paranoid reload %i
ExecStop=/usr/lib/systemd/scripts/paranoid stop %i
RemainAfterExit=yes
Type=oneshot

[Install]
WantedBy=multi-user.target
